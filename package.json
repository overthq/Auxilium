{
	"name": "auxilium",
	"description": "Emergency reporting app",
	"version": "0.0.1",
	"private": true,
	"license": "GNU GPL V3",
	"repository": "https://github.com/overthq/Auxilium",
	"author": {
		"name": "Oluwakorede Fashokun",
		"email": "korede@overt.dev",
		"url": "https://overt.dev"
	},
	"scripts": {
		"dev:app": "yarn workspace @auxilium/app start -c",
		"dev:server": "cd packages/server && yarn dev"
	},
	"workspaces": [
		"packages/app",
		"packages/dashboard"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"eslint --fix",
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-import": "^2.19.1",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.17.0",
		"husky": "^3.0.1",
		"lint-staged": "^10.0.4",
		"prettier": "^1.19.1"
	}
}
